{
  "name": "@akashic/headless-akashic",
  "version": "3.0.0",
  "description": "A headless module for launching contents with the Akashic Engine",
  "main": "lib/index.js",
  "scripts": {
    "prepare": "npm run build",
    "build": "rimraf ./lib && npm run format && tsc",
    "format": "run-s format:*",
    "format:prettier": "prettier --write \"src/**/*.ts\"",
    "format:eslint": "eslint src/**/*.ts --fix",
    "test": "run-s test:*",
    "test:jest": "jest",
    "test:eslint": "eslint src/**/*.ts",
    "test:remark": "remark ./*.md --frail --no-stdout --quiet"
  },
  "author": "DWANGO Co., Ltd.",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/akashic-games/headless-akashic.git"
  },
  "files": [
    "lib",
    "fixtures"
  ],
  "eslintConfig": {
    "root": true,
    "extends": [
      "@akashic/eslint-config",
      "prettier"
    ],
    "parserOptions": {
      "project": "tsconfig.jest.json",
      "sourceType": "module"
    }
  },
  "eslintIgnore": [
    "**/*.js"
  ],
  "jest": {
    "collectCoverage": true,
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "./src/**/*.ts",
      "!./src/__tests__/**/*.ts"
    ],
    "coverageReporters": [
      "lcov"
    ],
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsconfig": "tsconfig.jest.json"
      }
    },
    "testMatch": [
      "<rootDir>/src/**/*.spec.ts"
    ],
    "globalSetup": "<rootDir>/src/__tests__/setup.ts"
  },
  "prettier": {
    "arrowParens": "avoid",
    "bracketSpacing": true,
    "printWidth": 140,
    "singleQuote": false,
    "tabWidth": 4,
    "trailingComma": "none",
    "useTabs": true
  },
  "remarkConfig": {
    "plugins": [
      "@akashic/remark-preset-lint"
    ]
  },
  "dependencies": {
    "@akashic/headless-driver": "^2.0.2",
    "canvas": "2.9.1",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@akashic/eslint-config": "^1.1.0",
    "@akashic/remark-preset-lint": "^0.1.2",
    "@types/jest": "^27.5.1",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^5.25.0",
    "eslint": "^8.16.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^26.2.2",
    "jest": "^27.5.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.6.2",
    "remark-cli": "^10.0.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.1.4",
    "typescript": "^4.6.3"
  },
  "publishConfig": {
    "@akashic:registry": "https://registry.npmjs.org/"
  }
}
