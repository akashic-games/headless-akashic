{
  "name": "@akashic/headless-akashic",
  "version": "4.8.0",
  "description": "A headless module for launching contents with the Akashic Engine",
  "main": "lib/index.js",
  "scripts": {
    "prepare": "npm run build",
    "build": "rimraf ./lib && npm run format && tsc",
    "format": "run-s format:*",
    "format:prettier": "prettier --write \"src/**/*.ts\"",
    "format:eslint": "eslint src/**/*.ts --fix",
    "test": "run-s test:*",
    "test:jest": "jest",
    "test:eslint": "eslint src/**/*.ts",
    "test:remark": "remark ./*.md --frail --no-stdout --quiet"
  },
  "author": "DWANGO Co., Ltd.",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/akashic-games/headless-akashic.git"
  },
  "files": [
    "lib",
    "fixtures"
  ],
  "jest": {
    "collectCoverage": true,
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "./src/**/*.ts",
      "!./src/__tests__/**/*.ts"
    ],
    "coverageReporters": [
      "lcov"
    ],
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.ts$": [
        "ts-jest",
        {
          "tsconfig": "tsconfig.jest.json"
        }
      ]
    },
    "testMatch": [
      "<rootDir>/src/**/*.spec.ts"
    ],
    "globalSetup": "<rootDir>/src/__tests__/setup.ts"
  },
  "prettier": {
    "arrowParens": "avoid",
    "bracketSpacing": true,
    "printWidth": 140,
    "singleQuote": false,
    "tabWidth": 4,
    "trailingComma": "none",
    "useTabs": true
  },
  "remarkConfig": {
    "plugins": [
      "@akashic/remark-preset-lint"
    ]
  },
  "dependencies": {
    "@akashic/headless-driver": "^2.18.0",
    "uuid": "^10.0.0"
  },
  "devDependencies": {
    "@akashic/eslint-config": "^3.0.2",
    "@akashic/remark-preset-lint": "^0.1.2",
    "@types/jest": "^30.0.0",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^8.50.0",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^10.1.8",
    "jest": "^30.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.4.2",
    "remark-cli": "^12.0.1",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.4.6",
    "typescript": "^5.7.3"
  },
  "publishConfig": {
    "@akashic:registry": "https://registry.npmjs.org/"
  }
}
