{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "lib": ["ES2020"],
    "declaration": true,
    "outDir": "./lib",
    "strict": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "moduleResolution": "Node"
  },
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": [
    "./src/__tests__/**/*.ts"
  ]
}
